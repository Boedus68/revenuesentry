rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per la collezione users
    // Ogni utente può leggere e scrivere solo il proprio documento
    match /users/{userId} {
      // Permette lettura solo se l'utente è autenticato e sta leggendo il proprio documento
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Permette scrittura solo se l'utente è autenticato e sta scrivendo nel proprio documento
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Blocca accesso a tutte le altre collezioni di default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

