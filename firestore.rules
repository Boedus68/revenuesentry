rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function per verificare se un utente è admin
    function isAdmin() {
      // Verifica se l'utente ha il ruolo 'admin' nel documento users
      // NOTA: Per ora permettiamo agli admin di leggere tutti i documenti users
      // In produzione, considera di usare Cloud Functions per gestire gli admin
      return request.auth != null && 
             exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Regole per la collezione users
    match /users/{userId} {
      // Admin possono leggere tutti i documenti users (incluso per verificare se sono admin)
      // Ogni utente può leggere il proprio documento
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        (exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
         get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin')
      );
      
      // Ogni utente può scrivere solo il proprio documento
      // Admin possono aggiornare anche altri documenti (utile per gestione)
      allow write: if request.auth != null && 
                      (request.auth.uid == userId || 
                       (isAdmin() && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['role'])));
      
      // Admin possono creare documenti per altri utenti (se necessario)
      allow create: if request.auth != null && isAdmin();
    }
    
    // Regole per adminLogs (solo admin possono scrivere, tutti gli admin possono leggere)
    match /adminLogs/{logId} {
      allow read: if request.auth != null && isAdmin();
      allow write: if request.auth != null && isAdmin();
    }
    
    // Regole per historical_data (dati storici giornalieri per ML)
    match /historical_data/{docId} {
      // Utenti possono leggere e scrivere solo i propri dati (basato su hotelId nel documento)
      allow read, write: if request.auth != null && 
                          resource.data.hotelId == request.auth.uid;
      // Permetti creazione se hotelId corrisponde all'utente
      allow create: if request.auth != null && 
                     request.resource.data.hotelId == request.auth.uid;
    }
    
    // Regole per ml_predictions (predizioni ML)
    match /ml_predictions/{docId} {
      // Utenti possono leggere solo le proprie predizioni
      allow read: if request.auth != null && 
                  resource.data.hotelId == request.auth.uid;
      // Scrittura gestita solo da API server-side (Firebase Admin)
      allow write: if false; // Solo server-side
    }
    
    // Regole per competitor_data (dati competitor)
    match /competitor_data/{docId} {
      // Utenti possono leggere solo i propri dati competitor
      allow read: if request.auth != null && 
                  resource.data.hotelId == request.auth.uid;
      // Scrittura gestita solo da API server-side (Firebase Admin)
      allow write: if false; // Solo server-side
    }
    
    // Blocca accesso a tutte le altre collezioni di default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

